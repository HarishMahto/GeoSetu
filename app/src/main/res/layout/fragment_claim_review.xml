<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Review"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="24dp" />

        <!-- Claim Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claim Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvClaimId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claim ID: C1001"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvApplicantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Applicant: John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvVillage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Village: Sample Village"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tribe: Sample Tribe"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvClaimType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claim Type: IFR"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvLandArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Land Area: 2.5 acres"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSubmissionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submitted: 2024-01-15"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDocumentPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Document: /path/to/document.pdf"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Map Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIS Map Preview"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="ðŸ—ºï¸ Map Preview\n\nClaim polygon overlay on village map\n(Google Maps integration would show actual boundaries)"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center"
                    android:background="@color/background_light" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Review Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Comments"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etReviewComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter review comments"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Reject"
                android:textSize="16sp"
                app:backgroundTint="@color/red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApprove"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Approve"
                android:textSize="16sp"
                app:backgroundTint="@color/green" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>